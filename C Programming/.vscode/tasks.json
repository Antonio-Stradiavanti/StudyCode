{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				//"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				// Абсолютный путь к файлу
				"${file}",
				"-o",
				// Абсолютный путь к каталогу, в котором хранится файл.
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"label": "gcc -> Build & Run",
			"type": "shell",
			"command" : "/usr/bin/gcc -g3 -Wall \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\"",
			"options": {"cwd": "${fileDirname}"},
			"problemMatcher" : "$gcc",
			"detail": "Скрипт выполняет компиляцию исходного файла и запуск полученного исполняемого файла."
		}
	]
}